
  <div id='content'>
    <h2>Registration</h2>

    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
      <% str = devise_error_messages! %>
      <%= str.gsub(/Email has already been taken/mi,"<h3>Email you have specified is already registerd. Please click #{link_to("Forgot your password", new_password_path(resource_name))} to reset your password or click <b>#{ link_to("Sign in", new_session_path(resource_name)) }</b> If you already know it.</h3>").html_safe %>
      <br>
      

      <div><%= f.label :email %><br />
      <%= f.email_field :email, :autofocus => true %></div>

      <div><%= f.label :password %><br />
      <%= f.password_field :password %></div>

      <div><%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation %></div><br />

      <div><%= f.submit "Sign up" %></div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
