

<ul class='advisers'>
  <% @advisers.each do |adviser| %>
    <li><%= adviser.name %></li>
  <% end %>
</ul>
<ul class='pagination'>
  <strong>Jump to:</strong>
  <%- Adviser.pagination_letters.each do |letter| -%>
    <li><%= link_to(letter, alphabet_advisers_path(:letter => letter)) %></li>
  <%- end -%>
</ul>

<style type="text/css">
ul.pagination {
  list-style: none;
  color: lightgray;
  padding: 1em 0.5em;
}

ul.pagination strong {
  color: black;
}

ul.pagination li {
  display: inline;
  font-size: 1.1em;
}

ul.pagination li:before {
  content: '| ';
}
</style>